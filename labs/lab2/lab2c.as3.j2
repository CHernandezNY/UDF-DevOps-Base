{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-appsvcs-extension/master/schema/latest/as3-schema.json",
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.13.0",
        "label": "Demo",
        "id": "lab2b",
        "remark": "Demo Jinja2 and F5 CLI",
        "demo": {
            "class": "Tenant",
            {% for app in apps -%}
            "{{ app.name }}": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": [
                        "{{ app.virtualAddresses|join('", "') }}"
                    ],
                    "pool": "web_pool"
                },
                "web_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [{
                        "servicePort": 8080,
                        "serverAddresses": [
                            "{{ app.serverAddresses|join('", "') }}"
                        ]
                    }]
                }
            }{{ "," if not loop.last }}
            {% endfor -%}
        }
    }
}